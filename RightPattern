This Pattern is Starts from Right
public class RightPattern {

	public static void main(String[] args) {
		int line=5;
		int space=line-1;
		int star=1;
		for(int i=0;i<=line;i++)
		{
			for(int j=0;j<=space;j++)
			{
				System.out.print(" ");
			}
			for(int j=0;j<star;j++) {
				System.out.print("*");
			}
				System.out.println(" ");
				space=space-1;
				star=star+1;
			}
		}

}
